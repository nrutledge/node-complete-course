<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errors.length > 0) {
          errors.map(error => { %>
            <div class="user-message user-message--error"><%= error.msg %></div>
          <% })
        } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input 
                  class="<%= errors.find(error => error.param === 'name') ? 'invalid' : '' %>"
                  type="text" 
                  name="name" 
                  id="name" 
                  value="<%= inputValues.name %>"
                >
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                  class="<%= errors.find(error => error.param === 'email') ? 'invalid' : '' %>"
                  type="email" 
                  name="email" 
                  id="email" 
                  value="<%= inputValues.email %>"
                >
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                  class="<%= errors.find(error => error.param === 'password') ? 'invalid' : '' %>"
                  type="password" 
                  name="password" 
                  id="password" 
                  value="<%= inputValues.password %>"
                >
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                  class="<%= errors.find(error => error.param === 'confirmPassword') ? 'invalid' : '' %>"
                  type="password" 
                  name="confirmPassword" 
                  id="confirmPassword" 
                  value="<%= inputValues.name %>"
                >
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>